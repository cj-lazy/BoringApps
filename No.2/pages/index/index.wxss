/* index.wxss */
page {
  /* Neo-Pop */
  --bg: #f4f3f0;
  --text: #1a1a1a;
  --primary: #2f54eb; 
  --accent: #ff6b6b;  
  --white: #ffffff;
  --border-color: #000000;
  --shadow: 4px 4px 0px #000000;
  
  font-family: -apple-system, sans-serif;
  background-color: var(--bg);
  color: var(--text);
  height: 100vh; overflow: hidden;
}

.container { height: 100vh; display: flex; flex-direction: column; }

/* Navbar */
.navbar {
  padding: 100rpx 40rpx 20rpx; 
  display: flex; flex-direction: column; 
  background: var(--bg); z-index: 10;
}
.nav-top-row { width: 100%; display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; }
.nav-bottom-row { width: 100%; display: flex; justify-content: center; align-items: center; }
.app-title { font-size: 44rpx; font-weight: 900; letter-spacing: -1rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 90%; }

.btn-pill { padding: 12rpx 28rpx; border: 3rpx solid #000; border-radius: 40rpx; font-size: 24rpx; font-weight: bold; display: flex; align-items: center; transition: all 0.1s; white-space: nowrap; }
.btn-pill:active { transform: scale(0.95); }
.btn-pill.black { background: #000; color: #fff; }
.btn-pill.white { background: #fff; color: #000; }
.icon-swap, .icon-edit { margin-right: 8rpx; font-size: 26rpx; }
.tag-guest { background: var(--accent); color: #fff; padding: 10rpx 20rpx; border: 2px solid #000; font-size: 22rpx; font-weight: bold; transform: rotate(-5deg); box-shadow: 2px 2px 0 #000;}

/* === Stage (üî• ‰øÆÊîπÊ†∏ÂøÉ) === */
.stage { 
  flex: 1; 
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center; 
  /* Â∫ïÈÉ®Â¢ûÂä†Âà∞ 240rpxÔºåÂº∫Ë°åÊääÂÜÖÂÆπ‰∏äÁßª */
  padding: 0 40rpx 240rpx; 
}

/* Âç°Áâá */
.pop-card { width: 100%; height: 460rpx; background: var(--white); border: 3px solid #000; box-shadow: var(--shadow); border-radius: 20rpx; display: flex; flex-direction: column; margin-bottom: 30rpx; }
.card-header { padding: 30rpx; text-align: center; border-bottom: 2px dashed #eee; }
.icon-big { font-size: 80rpx; }
.card-body { flex: 1; display: flex; align-items: center; justify-content: center; overflow: hidden;}
.result-text { font-size: 64rpx; font-weight: 900; text-align: center; line-height: 1.2; word-break: break-all; padding: 0 20rpx; }
.shaking-text { animation: shake 0.1s infinite; opacity: 0.5; filter: blur(2px); }
.card-footer { padding: 16rpx; background: #fafafa; border-top: 2px solid #000; border-radius: 0 0 16rpx 16rpx; display: flex; align-items: center; justify-content: center; gap: 10rpx;}
.status-dot { width: 16rpx; height: 16rpx; border-radius: 50%; border: 1px solid #000; }
.status-dot.green { background: #52c41a; }
.status-dot.red { background: #ff4d4f; }
.status-text { font-size: 22rpx; color: #666; font-weight: bold; }
@keyframes shake { 0% { transform: rotate(0deg); } 25% { transform: rotate(2deg); } 75% { transform: rotate(-2deg); } }

/* ÁúãÊùø */
.stats-entry { width: 100%; background: #fff; border: 3px solid #000; box-shadow: 2px 2px 0 #000; border-radius: 16rpx; padding: 20rpx; margin-bottom: 40rpx; display: flex; align-items: center; justify-content: center; font-size: 26rpx; font-weight: bold; }
.stats-label { color: #666; margin-right: 10rpx; }
.stats-val { font-size: 32rpx; color: #000; font-weight: 900; margin-right: 10rpx; }
.stats-count { color: var(--primary); }
.stats-arrow { margin-left: auto; font-size: 24rpx; }
.stats-hint { color: #999; }

/* ÊåâÈíÆÂå∫ */
.action-area { width: 100%; }
.btn-main { background: var(--primary); color: #fff; border: 3px solid #000; border-radius: 16rpx; font-size: 36rpx; font-weight: 900; padding: 30rpx 0; box-shadow: var(--shadow); transition: all 0.1s; }
.btn-pressed { transform: translate(4px, 4px); box-shadow: none; }
.btn-secondary { background: var(--accent); color: #fff; border: 2px solid #000; border-radius: 12rpx; font-weight: bold; font-size: 28rpx; box-shadow: 2px 2px 0 #000; }
.btn-link { background: none; margin-top: 30rpx; font-size: 26rpx; color: #666; text-decoration: underline; font-weight: bold; }

/* Sheet */
.sheet { position: absolute; left: 0; bottom: 0; width: 100%; height: 80%; background: #fff; border-top: 3px solid #000; border-radius: 40rpx 40rpx 0 0; z-index: 101; display: flex; flex-direction: column; }
.sheet-header { padding: 40rpx; display: flex; justify-content: space-between; align-items: center; border-bottom: 2px solid #eee; flex-shrink: 0; }
.sheet-header text { font-size: 32rpx; font-weight: 900; }
.sheet-close { font-size: 50rpx; line-height: 30rpx; }
.input-zone { padding: 30rpx; display: flex; gap: 20rpx; border-bottom: 2px solid #000; background: #fffbe6; flex-shrink: 0; }
.btn-add { width: 80rpx; height: 80rpx; background: var(--primary); color: #fff; border: 2px solid #000; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; font-weight: bold; box-shadow: 2px 2px 0 #000;}

/* List */
.list-zone { flex: 1; padding: 0 30rpx; overflow-y: hidden; }
.list-item { display: flex; align-items: center; justify-content: space-between; padding: 24rpx 0; border-bottom: 2rpx solid #eee; }
.item-name { flex: 1; font-weight: bold; font-size: 30rpx; color: #1a1a1a; margin-right: 20rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.item-actions { display: flex; align-items: center; gap: 16rpx; margin-right: 20rpx; }

.weight-pill { border: 3rpx solid #000; border-radius: 30rpx; padding: 6rpx 16rpx; display: flex; align-items: center; background: #fff; font-size: 24rpx; box-shadow: 2rpx 2rpx 0 #000; }
.weight-pill:active { transform: translate(1rpx, 1rpx); box-shadow: none; }
.star-gold { font-size: 22rpx; margin-right: 6rpx; }
.weight-num { font-weight: 900; margin-right: 8rpx; font-size: 26rpx; }
.weight-arrow { font-size: 16rpx; color: #666; }

.btn-del { color: #ff4d4f; font-weight: bold; font-size: 24rpx; border: 3rpx solid #ff4d4f; padding: 6rpx 18rpx; border-radius: 12rpx; background: #fff5f5; }
.btn-del:active { background: #ff4d4f; color: #fff; }
.btn-danger { margin-top: 60rpx; background: #fff; color: #ff4d4f; border: 3rpx solid #ff4d4f; font-size: 28rpx; font-weight: bold; box-shadow: 4rpx 4rpx 0 rgba(255, 77, 79, 0.2); }

/* Modals */
.mask { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 100; visibility: hidden; opacity: 0; transition: 0.2s; backdrop-filter: blur(2px); }
.mask.visible { visibility: visible; opacity: 1; }

.drawer { position: absolute; left: 0; top: 0; width: 75%; height: 100%; background: #fff; border-right: 3px solid #000; transform: translateX(-100%); transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1); display: flex; flex-direction: column; }
.drawer.open { transform: translateX(0); }
.drawer-header { padding: 120rpx 40rpx 40rpx; font-size: 40rpx; font-weight: 900; border-bottom: 3px solid #000; background: #fffae6; }
.drawer-list { flex: 1; overflow-y: auto; background: #fff; }
.drawer-item { padding: 30rpx 40rpx; border-bottom: 1px solid #eee; display: flex; align-items: center; font-weight: bold; transition: 0.2s; }
.drawer-item.active { background: #e6f7ff; padding-left: 60rpx; }
.d-icon { margin-right: 20rpx; }
.d-name { flex: 1; }
.d-arrow { color: var(--primary); }
.drawer-footer { border-top: 3px solid #000; padding: 30rpx; background: #f4f3f0; padding-bottom: calc(30rpx + env(safe-area-inset-bottom)); }
.divider-text { font-size: 20rpx; color: #999; margin-bottom: 20rpx; font-weight: bold; text-transform: uppercase; }
.new-theme-row { display: flex; gap: 10rpx; margin-bottom: 20rpx; }
.pop-input { background: #fff; border: 2px solid #000; height: 80rpx; padding: 0 20rpx; font-size: 28rpx; border-radius: 12rpx; }
.pop-input.small { flex: 2; }
.pop-input.mini { flex: 1; text-align: center; }
.btn-create { background: #000; color: #fff; border-radius: 12rpx; font-size: 28rpx; font-weight: bold; height: 80rpx; line-height: 80rpx; }

.pop-modal { width: 80%; background: #fff; border: 3px solid #000; box-shadow: var(--shadow); border-radius: 20rpx; padding: 40rpx; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); }
.modal-head { display: flex; justify-content: space-between; margin-bottom: 40rpx; font-weight: 900; font-size: 32rpx; }
.hero-block { text-align: center; margin-bottom: 40rpx; padding: 20rpx; background: #f0f5ff; border: 2px solid #000; border-radius: 16rpx; }
.crown { font-size: 50rpx; display: block; }
.hero-title { font-size: 40rpx; font-weight: 900; display: block; margin: 10rpx 0; }
.hero-desc { font-size: 24rpx; color: #666; font-weight: bold; }
.stat-list { max-height: 400rpx; }
.stat-row { display: flex; align-items: center; margin-bottom: 20rpx; }
.s-name { width: 100rpx; font-size: 24rpx; font-weight: bold; white-space: nowrap; overflow: hidden; }
.progress-box { flex: 1; height: 20rpx; border: 2px solid #000; border-radius: 10rpx; margin: 0 20rpx; background: #eee; }
.progress-bar { height: 100%; background: var(--accent); border-right: 2px solid #000; }
.s-num { width: 50rpx; text-align: right; font-weight: bold; font-size: 24rpx; }

.btn-clear { margin-top: 30rpx; background: #fff5f5; color: #ff4d4f; border: 3rpx dashed #ff4d4f; font-size: 26rpx; font-weight: bold; border-radius: 12rpx; }